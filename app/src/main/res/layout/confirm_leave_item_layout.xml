<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp16">

        <TextView
            android:id="@+id/textView_confirm_leave_item_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            tools:text="Tên nhân viên" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_confirm_leave_item_fromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghỉ từ ngày "
                android:textColor="@color/charcoal"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/textView_confirm_leave_item_toDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:text="Nghỉ đến ngày "
                android:textColor="@color/charcoal"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@color/pale_grey"></FrameLayout>
</FrameLayout>