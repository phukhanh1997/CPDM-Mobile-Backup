<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_confirm_leave_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nhân viên"/>

    <TextView
        android:id="@+id/textView_confirm_leave_fromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="38dp"
        android:text="Nghỉ từ ngày" />

    <TextView
        android:id="@+id/textView_confirm_leave_toDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_confirm_leave_fromDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="Nghỉ đến ngày" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_confirm_leave_fromDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:text="Nội dung cụ thể: " />

    <TextView
        android:id="@+id/textView_confirm_leave_content"
        android:layout_width="314dp"
        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="190dp"
        android:text="Con cò be bé" />

    <Button
        android:id="@+id/btn_confirm_leave_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Duyệt" />

    <Button
        android:id="@+id/btn_confirm_leave_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_confirm_leave_accept"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="100dp"
        android:text="Xóa" />
    <Button
        android:id="@+id/btn_confirm_leave_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_confirm_leave_accept"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:text="Đóng" />
</RelativeLayout>